<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Users\Domain\Entity\User" table="users">

        <id name="id" type="user_id" column="id">
            <generator strategy="NONE"/>
        </id>

        <field name="email" type="email" length="180" column="email" />

        <field name="displayName" type="string" length="255" column="display_name" nullable="true" />

        <field name="googleId" type="string" length="64" column="google_id" nullable="true" />

        <field name="roles" type="json" column="roles" />

        <field name="createdAt" type="datetime_immutable" column="created_at" />

        <unique-constraints>
            <unique-constraint name="uniq_users_email" columns="email" />
            <unique-constraint name="uniq_users_google_id" columns="google_id" />
        </unique-constraints>

    </entity>
</doctrine-mapping>
