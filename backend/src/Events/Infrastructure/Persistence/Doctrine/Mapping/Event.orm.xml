<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Events\Domain\Event" table="events">

        <id name="id" type="event_id" column="id">
            <generator strategy="NONE"/>
        </id>

        <field name="name" type="string" length="255" column="name" />

        <field name="organiserId" type="organiser_id" column="organiser_id" />

        <field name="startAt" type="datetime_immutable" column="start_at" />

        <field name="endAt" type="datetime_immutable" column="end_at" />

        <field name="createdAt" type="datetime_immutable" column="created_at" />

    </entity>
</doctrine-mapping>
